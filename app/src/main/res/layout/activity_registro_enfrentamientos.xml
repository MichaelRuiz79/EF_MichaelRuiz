<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".Registro_Enfrentamientos">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Enfrentamientos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Equipo Local"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerLocalTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Equipo Visitante"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerVisitorTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuotas"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/editTextQuotaLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Local(L)"
            android:inputType="numberDecimal"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/editTextQuotaDraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Empate(X)"
            android:inputType="numberDecimal"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/editTextQuotaVisitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Visita(V)"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRegisterMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/buttonRegisterTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Equipos"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonMatchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listado de Enfrentamientos"
        android:layout_marginBottom="16dp" />

</LinearLayout>
